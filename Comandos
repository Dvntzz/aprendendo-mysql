-- Criando banco
CREATE DATABASE nomeDoBanco;

-- REMOVER BANCO
DROP DATABASE nomeDoBanco;

-- SELECIONANDO UM BANCO
USE nomeDoBanco;

-- CRIAR TABELA
CREATE TABLE nomeDaTabela (
 nome VARCHAR(100)
);

-- REMOVER TABELA
DROP TABLE nomeDaTabela;

-- TIPOS DE DADOS x = limite de caracteres
-- texto = VARCHAR(x)
-- numero = INT(x)
-- datas = DATE, TIMESTAMP

CREATE TABLE nomeDaTabela (
    coluna1 VARCHAR(100),
    coluna2 INT,
    coluna3 DATE
);



